# Hospital Appointment Booking System 

doctor_schedule = {
    "Dr. Smith": [],
    "Dr. Lee": [],
    "Dr. Adams": []
}

def is_doctor_available(doctor, date):
    """Return True if doctor is free on the selected date."""
    booked_dates = doctor_schedule.get(doctor, [])
    return date not in booked_dates

def book_appointment(patient, doctor, date):
    """Book an appointment for the patient with the doctor."""
    doctor_schedule.setdefault(doctor, []).append(date)
    print(f"\n‚úÖ Appointment confirmed!")
    print(f"Patient: {patient}\nDoctor: {doctor}\nDate: {date}\n")

def show_doctor_schedule():
    """Display current doctor bookings."""
    print("\nüìÖ Current Doctor Schedules:")
    for doc, dates in doctor_schedule.items():
        print(f" {doc}: {', '.join(dates) if dates else 'No appointments yet.'}")

# --- Main Program ---
print("üè• Welcome to the Hospital Appointment Booking System üè•")
print("Available Doctors: Dr. Smith, Dr. Lee, Dr. Adams\n")

patient = input("Enter your name: ").title()
doctor = input("Enter doctor's name: ").title()
date = input("Enter preferred date (YYYY-MM-DD): ")

if is_doctor_available(doctor, date):
    book_appointment(patient, doctor, date)
else:
    print(f"\n‚ùå Sorry, {doctor} is not available on {date}. Please choose another date.\n")
